<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.apache.submarine.server.notebook.database.mappers.NotebookMapper">
  <resultMap id="BaseEntityResultMap" type="org.apache.submarine.server.database.entity.BaseEntity">
    <id property="id" column="id"/>
    <result column="create_by" property="createBy"/>
    <result column="create_time" property="createTime"/>
    <result column="update_by" property="updateBy"/>
    <result column="update_time" property="updateTime"/>
  </resultMap>

  <resultMap id="NotebookEntityResultMap" type="org.apache.submarine.server.notebook.database.entity.NotebookEntity" extends="BaseEntityResultMap">
    <result column="started" jdbcType="BOOLEAN" property="started"/>
    <result column="start_time" property="startTime"/>
    <result column="notebook_spec" jdbcType="VARCHAR" property="notebookSpec" />
  </resultMap>

  <sql id="Base_Column_List">
    id, notebook_spec, started, start_time, create_by, create_time, update_by, update_time
  </sql>

  <select id="selectAll" parameterType="java.lang.String" resultMap="NotebookEntityResultMap">
    select
    <include refid="Base_Column_List" />
    from notebook
  </select>

  <select id="selectStarted" parameterType="java.lang.Integer" resultMap="NotebookEntityResultMap">
    select
    <include refid="Base_Column_List" />
    from notebook
    where started = 1
      and timestampdiff(MINUTE, start_time, now()) >= #{duration,jdbcType=INTEGER}
  </select>

  <select id="select" parameterType="java.lang.String" resultMap="NotebookEntityResultMap">
    select
    <include refid="Base_Column_List" />
    from notebook
    where id = #{id,jdbcType=VARCHAR}
  </select>

  <delete id="delete" parameterType="java.lang.String">
    delete from notebook
    where id = #{id,jdbcType=VARCHAR}
  </delete>

  <insert id="insert" parameterType="org.apache.submarine.server.notebook.database.entity.NotebookEntity">
    insert into notebook (id, notebook_spec, create_by, create_time, update_by, update_time)
    values (#{id,jdbcType=VARCHAR}, #{notebookSpec,jdbcType=VARCHAR},
            #{createBy,jdbcType=VARCHAR}, now(), #{updateBy,jdbcType=VARCHAR}, now())
  </insert>

  <update id="update" parameterType="org.apache.submarine.server.notebook.database.entity.NotebookEntity">
    update notebook
    <set>
      <if test="notebookSpec != null">
        notebook_spec = #{notebookSpec,jdbcType=VARCHAR},
      </if>
      update_time = now()
    </set>
    where id = #{id,jdbcType=VARCHAR}
  </update>

  <update id="stop" parameterType="java.lang.String">
    update notebook set started = 0
    where id = #{id,jdbcType=VARCHAR}
  </update>

  <update id="start" parameterType="java.lang.String">
    update notebook set started = 1, start_time = now()
    where id = #{id,jdbcType=VARCHAR}
  </update>

</mapper>
